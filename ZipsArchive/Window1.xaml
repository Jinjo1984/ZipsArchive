<Window x:Class="ZipsArchive.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipsArchive"
        mc:Ignorable="d"
        Title="Архивация" Height="200" Width="438"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Browse" Content="..."  HorizontalAlignment="Left" Margin="399,13,0,0" VerticalAlignment="Top" Height="20" Width="19" Click="Browse_Click"  />
        <Border x:Name="BackEnd" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="381">
            <TextBlock x:Name="textBlock" TextAlignment="Center" TextWrapping="Wrap" Text="Укажите путь до папки" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="9,0,0,0" Height="17" Width="372"/>
        </Border>
        <Button x:Name="Archivers" Content="Заархивировать папку" HorizontalAlignment="Left" Margin="134,74,0,0" VerticalAlignment="Top" Width="165" Height="32" Click="Archivers_Click"/>

    </Grid>
</Window>
